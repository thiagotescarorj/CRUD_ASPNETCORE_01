@model IEnumerable<Vendedor>
@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(Model => Model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.SalarioBase)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(itemModelo => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(itemModelo => item.Email)
            </td>
            <td>
                @Html.DisplayFor(itemModelo => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(itemModelo => item.SalarioBase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>  | 
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> | 
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>

